<% if form_capacity %>
  <%= form_for form_capacity, url: club_form_capacity_path(@club), method: :patch, remote: true do |f| %>
    <table class="table table-striped mx-auto">
      <thead>
        <tr>
          <th scope="col">Form</th>
          <th scope="col">Capacity</th>
        </tr>
      </thead>
      <tbody>
        <% (1..5).each do |form_number| %>
          <tr>
            <td>Form <%= form_number %></td>
            <td>
              <%= f.number_field "f#{form_number}", value: form_capacity.send("f#{form_number}"), class: "form-control" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= f.submit "Update Form Capacity", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <p>No form capacity available for this club.</p>
<% end %>
