<p style="color: green"><%= notice %></p>

<h1>Clubs</h1>

<table class="table">
  <thead class="table-light">
    <tr>
      <th>Club Id</th>
      <th>Name</th>
      <th>Budget(RM)</th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.id %></td>
        <td><%= club.name %></td>
        <td><%= club.budget %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Allocate Budget', editBudget_clubs_path, class: 'btn btn-warning btn-sm' %>

