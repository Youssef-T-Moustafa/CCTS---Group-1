
    <h4 class="card-title text-center">Club Information</h4>
    
    <div class="row justify-content-center">
      <div class="col-md-8"> <!-- Adjusted width to 2/3 (8 out of 12 columns) -->
        <table class="table table-striped mx-auto">
          <tbody>
            <tr>
              <th scope="row" class="col-6">Club Name</th>
              <td class="col-6 text-center"><%= club.name %></td>
            </tr>
            <tr>
              <th scope="row" class="col-6">Description</th>
              <td class="col-6 text-center"><%= club.description %></td>
            </tr>
            <tr>
              <th scope="row" class="col-6">Advisors</th>
              <td class="col-6 text-center">
                <ul class="list-unstyled">
                  <% club.club_advisors.each do |advisor| %>
                    <li><%= advisor.staff.first_name %></li>
                  <% end %>
                </ul>
              </td>
            </tr>
            <tr>
              <th scope="row" class="col-6">Budget (RM)</th>
              <td class="col-6 text-center"><%= club.budget %></td>
            </tr>
            <tr>
              <th scope="row" class="col-6">Remaining Capacity</th>
               <td class="col-6 text-center">
                <%= "#{club.capacity-club.club_members.count}/#{club.capacity}" %>
              </td>
            </tr>
          </tbody>
        </table><br><hr>

      <!-- Existing code ... -->

      <!-- Additional Table for Club Members -->
    <h4 class="text-center mt-3">Club Members (<%= "#{club.club_members.count}" %>)</h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Phone Number</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% club.club_members.each do |member| %>
          <tr>
            <td data-label = "Full Name"><%= member.student.full_name %></td>
            <td data-label = "Phone Number"><%= member.student.parent_phone %></td>
            <td data-label = "Email"><%= member.student.parent_email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
          </div>
        </div>

    <!-- Additional Table for Activities -->
    <h4 class="text-center mt-3">Activities (<%= "#{club.activities.count}" %>)</h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Start Date</th>
          <th>End Date</th>
        </tr>
      </thead>
      <tbody>
        <% club.activities.each do |activity| %>
          <tr>
            <td data-label = "Title" > <%= activity.activity_title %> </td>
            <td data-label = "Description" ><%= activity.description %></td>
            <td data-label = "Start Date" ><%= activity.start_date %></td>
            <td data-label = "End Date" ><%= activity.end_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>