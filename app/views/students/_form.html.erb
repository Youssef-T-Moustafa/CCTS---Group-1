<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :gender, class: "form-label" %>
    <%= form.select :gender, options_for_select(['Male', 'Female']), {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :parent_phone, class: "form-label" %>
    <%= form.text_field :parent_phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :parent_email, class: "form-label" %>
    <%= form.text_field :parent_email, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
