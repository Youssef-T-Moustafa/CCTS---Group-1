<%= form_with(model: attendance) do |form| %>
  <% if attendance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attendance.errors.count, "error") %> prohibited this attendance from being saved:</h2>

      <ul>
        <% attendance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :activity_id, style: "display: block" %>
    <%= form.text_field :activity_id, value: @activity.id, readonly: true %>
  </div>



  <% @students.each do |student| %>
    <div>
      <%= form.check_box :student_ids, { multiple: true }, student.id, nil %>
      <%= form.label "student_ids_#{student.id}", student.full_name %> <!-- Assuming you have a full_name method in your Student model -->
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
