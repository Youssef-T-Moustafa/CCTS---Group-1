<%= form_with(model: attendance) do |form| %>
  <% if attendance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attendance.errors.count, "error") %> prohibited this attendance from being saved:</h2>

      <ul>
        <% attendance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :activity_id, style: "display: block" %>
    <%= form.text_field :activity_id %>
  </div>

<div>
  <%= form.label :student_ids, "Select Students", style: "display: block" %>
  <% Student.all.each do |student| %>
    <div>
      <%= check_box_tag "attendance[student_ids][]", student.id, form.object.student_ids.include?(student.id) %>
      <%= label_tag "attendance_student_ids_#{student.id}", student.full_name %>
    </div>
  <% end %>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
