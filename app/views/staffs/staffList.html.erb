<h1>Staff</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Staff ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Assigned Clubs</th>
      <!-- New column header -->
    </tr>
  </thead>
  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td data-label="Staff ID"><%= staff.id %></td>
        <td data-label="First Name"><%= staff.first_name %></td>
        <td data-label="Last Name"><%= staff.last_name %></td>
        <td data-label="Gender"><%= staff.gender %></td>
        <td data-label="Email"><%= staff.email %></td>
        <td data-label="Phone"><%= staff.phone %></td>
        <td data-label="Assigned Clubs">
          <% staff.clubs.each do |club| %>
            <%= club.name %><br>
          <% end %>
        </td>
      </tr>
        <% end %>
  </tbody>
</table>
<%= link_to 'Back to Dashboard', dashboard_path, class: 'btn btn-primary mb-3 col-12' %>
