<h1>Student List</h1>

<table class="table">
  <thead class="table-light">
    <tr>
      <th>Student Id</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= "#{student.first_name} #{student.last_name}" %></td>
        <td><%= student.gender %></td>
        <td><%= student.parent_email %></td>
        <td><%= student.parent_phone %></td>
        <td>
          button here
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', staffs_path, class: 'btn btn-primary' %>
