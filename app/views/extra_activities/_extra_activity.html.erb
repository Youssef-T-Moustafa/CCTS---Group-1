<h2>External Activity Details</h2>
<table class="table table-striped table-bordered">
  <tbody>
    <tr>
      <th >Name</th>
      <td><%= extra_activity.name %></td>
    </tr>
    <tr>
      <th >Description</th>
      <td><%= extra_activity.description %></td>
    </tr>
    <tr>
      <th >Start Date</th>
      <td><%= extra_activity.start_date %></td>
    </tr>
    <tr>
      <th >End Date</th>
      <td><%= extra_activity.end_date %></td>
    </tr>
    <% if extra_activity.evidence %>
      <tr>
        <th>Uploaded File</th>
        <td>
          <%= extra_activity.evidence['filename'] %>
          <%= link_to 'Download', extra_activity_evidence_path(extra_activity.id), download: extra_activity.evidence['filename'] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
