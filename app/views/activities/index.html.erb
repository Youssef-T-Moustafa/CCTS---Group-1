<p style="color: green"><%= notice %></p>

<h1>Activities</h1>

<div id="activities">
  <% @activities.each do |activity| %>
    <%= render activity %>
    <p>
      <%= link_to "Show this activity", activity %>
    </p>
    <p>
      <%= link_to "Take Attendance", new_attendance_path(activity_id: activity.id), class: "btn btn-primary" %>
    </p>
  <% end %>
</div>

<%= link_to "New activity", new_activity_path %>
