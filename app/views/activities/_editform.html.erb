<%= form_with(model: activity, local: true) do |form| %>
  <% if activity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
  <%= form.label :activity_title, class: "form-label" %>
  <%= form.text_field :activity_title, class: "form-control", id: "floatingInput", placeholder: "Activity Title" %>
</div>

<div class="mb-3">
  <%= form.label :description, class: "form-label" %>
  <%= form.text_area :description, class: "form-control", id: "floatingTextarea", placeholder: "Description" %>
</div>

<div class="mb-3">
  <%= form.label :start_date, class: "form-label" %>
  <%= form.date_field :start_date, class: "form-control", id: "floatingStartDate", placeholder: "Start Date" %>
</div>

<div class="mb-3">
  <%= form.label :end_date, class: "form-label" %>
  <%= form.date_field :end_date, class: "form-control", id: "floatingEndDate", placeholder: "End Date" %>
</div>
<script>
  document.getElementById('floatingStartDate').addEventListener('change', function() {
    document.getElementById('floatingEndDate').min = this.value;
  });
</script>
  <div>
    <%= form.submit "Save Activity", class:"btn btn-success mb-3 col-12" %>
  </div>
<% end %>
