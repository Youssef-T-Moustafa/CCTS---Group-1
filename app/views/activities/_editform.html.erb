<%= form_with(model: activity) do |form| %>
  <% if activity.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :activity_title, style: "display: block" %>
    <%= form.text_field :activity_title, class: "form-control", id: "floatingInput", placeholder: "Activity Title" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control", id: "floatingTextarea", placeholder: "Description" %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date, class: "form-control", id: "floatingDate", placeholder: "Start Date" %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date, class: "form-control", id: "floatingDate", placeholder: "End Date" %>
  </div>

  <div>
    <%= form.label :requested_budget, style: "display: block" %>
    <%= form.text_field :requested_budget, class: "form-control", id: "floatingInput", placeholder: "Allocated Budget" %>
  </div>

  <div>
    <%= form.label :club_id, style: "display: block" %>
    <%= form.text_field :club_id, class: "form-control", id: "floatingInput", placeholder: "Club ID" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success btn-lg" %>
  </div>
<% end %>
