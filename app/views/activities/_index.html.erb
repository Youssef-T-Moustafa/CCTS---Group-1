<p style="color: green"><%= notice %></p>
<h1>Activities</h1>

<table class="table table-striped table-hover table-bordered border-dark">
  <thead>
    <tr>
      <th>Activity Title</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Requested Budget (RM)</th>
      <th>Club Name</th>
      <th colspan="2" style="text-align: center;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_title %></td>
        <td><%= activity.description %></td>
        <td><%= activity.start_date %></td>
        <td><%= activity.end_date %></td>
        <td><%= number_with_precision(activity.requested_budget, precision: 2) %></td>
        <td><%= activity.club.name %></td>
        <td><%= link_to 'Show Activity', activity, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Attendance', new_attendance_path(activity_id: activity.id), class: 'btn btn-info btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Activity', new_activity_path, class: 'btn btn-success' %>