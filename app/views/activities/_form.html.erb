<%= form_with(model: activity) do |form| %>
  <% if activity.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
  <%= form.label :activity_title, class: "form-label", for: "floatingInput" %>
  <%= form.text_field :activity_title, class: "form-control", id: "floatingInput", placeholder: "Activity Title" %>
</div>
<div class="mb-3">
  <%= form.label :description, class: "form-label", for: "floatingTextarea" %>
  <%= form.text_area :description, class: "form-control", id: "floatingTextarea", placeholder: "Description" %>
</div>
<div class="mb-3">
  <%= form.label :start_date, class: "form-label", for: "floatingDateStart" %>
  <%= form.date_field :start_date, class: "form-control", id: "floatingDateStart", placeholder: "Start Date" %>
</div>
<div class="mb-3">
  <%= form.label :end_date, class: "form-label", for: "floatingDateEnd" %>
  <%= form.date_field :end_date, class: "form-control", id: "floatingDateEnd", placeholder: "End Date" %>
</div>
<div class="mb-3">
  <%= form.label :requested_budget, class: "form-label", for: "floatingBudget" %>
  <%= form.text_field :requested_budget, class: "form-control", id: "floatingBudget", placeholder: "Requested Budget" %>
</div>
<div class="mb-3">
  <%= form.label :club_id, class: "form-label", for: "floatingClubID" %>
  <%= form.select :club_id, options_for_select(current_user.club_advisors.map { |club_advisor| [club_advisor.club.name, club_advisor.club.id] }), {}, { class: "form-control", id: "floatingClubID", placeholder: "Select Club" } %>
</div>

  <div>
    <%= form.submit "Submit Activity",  class: "btn btn-success col-12" %>
  </div>
<% end %>